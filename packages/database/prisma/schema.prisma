generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// A monitored website project
model Project {
  id        String        @id @default(uuid())
  name      String
  url       String
  frequency String        @default("daily") // "daily" | "weekly"
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")
  audits    AuditResult[]

  @@map("projects")
}

/// Result of a single Lighthouse audit run
model AuditResult {
  id         String    @id @default(uuid())
  projectId  String    @map("project_id")
  project    Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  status     JobStatus @default(PENDING)
  score      Int?      // 0-100 Performance Score
  reportJson Json?     @map("report_json") // Full Lighthouse JSON
  errorMsg   String?   @map("error_msg")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  @@index([projectId])
  @@index([createdAt])
  @@map("audit_results")
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
